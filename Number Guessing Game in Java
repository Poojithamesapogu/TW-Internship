import java.util.*;
 
public class GFG {
 
    // Function that implements the
    // number guessing game
    public static void
    guessNumberGame()
    {
        // Scanner Class
        Scanner sc = new Scanner(System.in);
 
        // Generate the numbers
        int num = 1 + (int)(100
                               * Math.random());
 
        // Given K trials
        int K = 5;
 
        int i, guess;
 
        System.out.println("Welcome to Guess Number Game\n"+"You Will Be Asked To Guess A Number To Win The Game\n"+"You have Maximum 5 Attempt Limit");
 
        // Iterate over K Trials
        for (i = 0; i < K; i++) {
 
            System.out.println(
                "Enter a guess number between  1 to 100");
 
            // Take input for guessing
            guess = sc.nextInt();
 
            // If the number is guessed
            if (num == guess) {
                System.out.println(
                    "OOhhOO!, Your Number is Correct. You Win the Game.");
                break;
            }
            else if (num > guess
                     && i != K - 1) {
                System.out.println(
                    "Your Guess Number is Greater " );
            }
            else if (num < guess
                     && i != K - 1) {
                System.out.println(
                    "Your Guess Number is Smaller " );
            }
        }
 
        if (i == K) {
            System.out.println(
                "You have exhausted"
                + " K trials.");
 
            System.out.println(
                "The number was " + num);
        }
    }
 
    // Driver Code
    public static void
    main(String arg[])
    {
 
        // Function Call
        guessNumberGame();
    }
}
